{
  "name": "heticmadu_api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "status": "docker ps -a && echo '' && docker images && echo '' && docker volume ls && echo '' && docker network ls",
    "build:enc": "./devops/prod/scripts/build_enc.sh",
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "db:load": "myloader -h 127.0.0.1 -P 3356 -u admin -p admin -B heticmadu -v 3 -d ./devops/dev/db/ -o && npm run db:dump:prod",
    "db:dump": "mydumper -h 127.0.0.1 -P 3356 -o ./devops/dev/db/ -B heticmadu -u admin -p admin -t 8 -v 3 --lock-all-tables",
    "db:dump:prod": "docker exec heticmadu-api-db mysqldump --no-data -u admin -padmin --databases heticmadu --skip-comments > ./devops/prod/db/dump.sql",
    "start": "npm run docker:up",
    "start:dev": "nodemon",
    "start:debug": "npm run docker:debug:down && npm run docker:debug:up",
    "docker:up": "docker-compose -f ./devops/dev/docker/docker-compose.yml up",
    "docker:debug:up": "docker-compose -f ./devops/dev/docker/docker-compose.yml up --build --force-recreate",
    "docker:debug:down": "docker-compose -f ./devops/dev/docker/docker-compose.yml down --rmi all -v",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.0.0",
    "@nestjs/platform-express": "^6.0.0",
    "@nestjs/typeorm": "^6.3.1",
    "dotenv": "^8.2.0",
    "mysql": "^2.18.1",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3",
    "typeorm": "^0.2.22"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.13",
    "@types/node": "^10.12.18",
    "@types/supertest": "^2.0.7",
    "@nestjs/testing": "^6.0.0",
    "jest": "^23.6.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "supertest": "^3.4.1",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0",
    "tslint": "5.12.1",
    "typescript": "^3.2.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
